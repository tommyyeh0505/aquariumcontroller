<AquariumController>:
	cols: 3
	rows: 5
	spacing: 10
	padding: 10
	
	# Temperature
	Button:
		text: "Temperature"
		size_hint_x: None
		width: 200
		
	GridLayout:
		cols: 2
		rows: 2
		Label:
			text: "Current Temperature"
		Label:
			text: root.current_temp_label
		Label:
			text: "Set Temperature"
		Label:
			text: root.set_temp_label
			
	Slider:
		id: temperatureSlider
		value: root.defaultTemp
		range: (10, 25)
		step: 0.5
		on_value: root.updateTemp(self.value)
		
	# Flow
	Button:
		text: "Flow Rate"
		size_hint_x: None
		width: 200
	Label:
		text: root.set_flow_label
	Slider:
		id: flowSlider
		value: root.defaultFlow
		range: (0, 100)
		step: 5	
		on_value: root.updateFlow(self.value)
		
	# Light
	Button:
		text: "Light Intensity"
		size_hint_x: None
		width: 200
	Label:
		text: root.set_light_label
	Slider:
		id: lightIntensitySlider
		value: root.defaultLight
		range: (0, 100)
		step: 1			
		on_value: root.updateLight(self.value)
		
	# Water Quality
	Button:
		text: "Water Quality"
		size_hint_x: None
		width: 200
	Label:
		text: "30"
	Slider:
		id: waterQualitySlider
		value: 50
		range: (0, 100)
		step: 1
		
		
		
		