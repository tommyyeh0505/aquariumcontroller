<AquariumController>:
	cols: 3
	rows: 5
	spacing: 10
	padding: 10
	
	# Temperature
	Button:
		text: "Temperature"
		size_hint_x: None
		width: 200
		
	GridLayout:
		cols: 2
		rows: 2
		Label:
			text: "Current Temperature"
		Label:
			text: "80F"
		Label:
			text: "Set Temperature"
		Label:
			text: "90F"
			
	Slider:
		id: temperatureSlider
		value: 20
		range: (10, 25)
		step: 0.5
		
	# Flow
	Button:
		text: "Flow Rate"
		size_hint_x: None
		width: 200
	Label:
		text: "500GPH"
		width: 50
	Slider:
		id: flowSlider
		value: 50
		range: (0, 100)
		step: 5	
		
	# Light
	Button:
		text: "Light Intensity"
		size_hint_x: None
		width: 200
	Label:
		text: "50"
		width: 50
	Slider:
		id: lightIntensitySlider
		value: 0
		range: (0, 100)
		step: 1			
		
	# Water Quality
	Button:
		text: "Water Quality"
		size_hint_x: None
		width: 200
	Label:
		text: "30"
		width: 50
	Slider:
		id: waterQualitySlider
		value: 50
		range: (0, 100)
		step: 1
		
		
		
		